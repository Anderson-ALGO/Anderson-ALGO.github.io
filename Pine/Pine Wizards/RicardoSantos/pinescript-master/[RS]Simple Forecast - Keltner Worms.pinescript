p100u = plot(p100upper, color=#0094FF, title="Upper", offset=100, show_last=50)
plot(p100ma, color=#0094FF, title="Basis", offset=100, show_last=50)
p100l = plot(p100lower, color=#0094FF, title="Lower", offset=100, show_last=50)
